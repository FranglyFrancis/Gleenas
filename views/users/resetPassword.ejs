        <form action="/reset-password/<%= email%>" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="">New Password</label>
                    <input type="text" class="form-control" required="" id="pass" name="pass" placeholder="Enter password">
                </div>
            </div> 
            <div class="form-group col-md-6">
                    <label for="">Confirm Password</label>
                    <input type="text" class="form-control" required="" id="confirmPass" name="password" placeholder="Re-enter password" onkeyup="validate_password()">
            </div>
            <span id="wrong_pass_alert"></span>
            <div>
              <button type="submit" id="create" onclick="window.location.href='/reset-password/' +'<%= email %>' +document.getElementById('pass').value"></button>
            </div>
        </form>
    </div>
<div>
    <br><br>
</div>

<script>
  function validate_password(){

    let pass = document.getElementById('pass').value
    let confirmPass = document.getElementById('confirmPass').value
    if(pass != confirmPass){
      document.getElementById('wrong_pass_alert').style.color = 'red'
      document.getElementById('wrong_pass_alert').innerHTML = 'â˜’ password is not matched'
      
      document.getElementById('create').disabled = true
      document.getElementById('create').style.opacity = (0.4)
    }

    else{
      document.getElementById('wrong_pass_alert').style.color ='green'
      document.getElementById('wrong_pass_alert').innerHTML = "Password matches"

