<script>
    let timer;
    let countdown = 30;  // Resend OTP timer in seconds

    function sendOtp() {
      const email = document.getElementById('email').value;

      if (!email) {
        alert('Please enter a valid email.');
        return;
      }

      // Simulate sending OTP (in a real scenario, make a backend request)
      const emailForm = document.getElementById('otpForm')
    const messageDiv = document.getElementById('message')

    emailForm.addEventListener('submit', (event) => {
        event.preventDefault()
        const email = document.getElementById('verifyEmail').value;
        fetch('/generate-otp', {
            method: 'POST',
            headers: {
                'Content-Type' : 'application/json'
            },
            body: JSON.stringify({ email: email })
        })
        .then(response => response.text())
        .then(data => {
            console.log(data.message)
            document.getElementById('message').innerHTML = data
        })
        .catch(error => {
            document.getElementById('message').textContent = `Error: ${error}`
        })
    })
      alert('OTP sent to ' + email);

      document.getElementById('otpSection').classList.remove('hidden');
      document.getElementById('sendOtpBtn').disabled = true;

      startTimer();
    }

    function verifyOtp() {
      const otp = document.getElementById('otp').value;

      if (!otp) {
        alert('Please enter the OTP.');
        return;
      }

      // Simulate OTP verification (in a real scenario, make a backend request)
      alert('OTP verified successfully!');
    }

    function startTimer() {
      countdown = 30;
      document.getElementById('resendOtpBtn').disabled = true;
      timer = setInterval(() => {
        countdown--;
        document.getElementById('timer').textContent = countdown;

        if (countdown <= 0) {
          clearInterval(timer);
          document.getElementById('resendOtpBtn').disabled = false;
          document.getElementById('timer').textContent = '0';
        }
      }, 1000);
    }

    function resendOtp() {
      // Simulate resending OTP (in a real scenario, make a backend request)
      alert('Resent OTP to email.');

      document.getElementById('otp').value = ''; // Clear OTP field
      startTimer(); // Restart the timer
    }
  </script>

